<%- include('partials/header.ejs') %>
<style>
  html,body{
background-image: url('http://getwallpapers.com/wallpaper/full/a/5/d/544750.jpg');
background-size: cover;
background-repeat: no-repeat;
height: 100%;
font-family: 'Numans', sans-serif;
}
h3{
  color : rgb(240, 240, 245);
}
th{
  color : rgb(240, 240, 245);
}
tr{
  color : rgb(240, 240, 245);
}
</style>
  <div class="container">
      <div class="row">
          <div class="col-md-12 mx-auto">
              <div class="mt-5">
                <h3 class="float-left">List Category</h3>
                <a href="/categories/add" class="btn btn-sm btn-primary float-right">Add Category</a>
              </div>
              <table class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Image</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Price</th>
                    <th scope="col">Waranty</th>
                    <th scope="col">No.Product</th>                    
                    <th scope="col">Action</th>
                </tr>
                </thead>
                <tbody>
                    <% categories.forEach(barang => { %>
                        <tr>
                            <td><%= barang.id %></td>
                            <td><%= barang.name %></td>
                            <td><img class="img-fluid" src="<%= barang.info %>"></td>
                            <td><%= barang.stock %></td>
                            <td><%= barang.price %></td>
                            <td><%= barang.waranty %></td>
                            <td><%= barang.no_product %></td>
                            <td><a href="categories/edit/<%= barang.id %>" class="btn btn-sm btn-info">Edit</a><a href="categories/delete/<%= barang.id %>" class="btn btn-sm btn-danger">Delete</a></td>
                        </tr>
                    <% }) %>
                </tbody>
              </table>
          </div>
      </div>
</div>

  
<%- include('partials/footer.ejs') %>
   